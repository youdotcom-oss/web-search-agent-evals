{
  "type": "module",
  "scripts": {
    "build": "docker compose build",
    "check": "bun run format:check && bun run lint && bun run typecheck && bun run check:package",
    "check:package": "format-package --check",
    "check:write": "bun run format && bun run lint:fix && bun run format:package",
    "clean": "rm -rf data/results/*/*.jsonl",
    "compare": "bun scripts/compare.ts",
    "compare:full": "bun scripts/compare.ts --mode full",
    "compare:statistical": "bun scripts/compare.ts --mode full --strategy statistical",
    "compare:test-builtin": "bun scripts/compare.ts --mode test --search-provider builtin --strategy weighted",
    "compare:test-statistical": "bun scripts/compare.ts --mode test --strategy statistical",
    "compare:test-weighted": "bun scripts/compare.ts --mode test --strategy weighted",
    "compare:test-you": "bun scripts/compare.ts --mode test --search-provider you --strategy weighted",
    "finalize-run": "bun scripts/finalize-run.ts",
    "format": "biome format --write",
    "format:check": "biome format",
    "format:package": "format-package --write",
    "generate:mcp": "bun scripts/generate-mcp-prompts.ts",
    "generate:mcp-you": "bun scripts/generate-mcp-prompts.ts --mcp-server ydc-server --tool you-search --suffix you",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "prepare": "git config core.hooksPath .hooks",
    "run": "bun scripts/run.ts",
    "run:full": "bun run run --mode full",
    "run:test": "bun run run --mode test",
    "sample:test": "bun scripts/sample-test-prompts.ts",
    "test": "bun test",
    "trials": "bun scripts/run-trials.ts",
    "trials:capability": "bun scripts/run-trials.ts --type capability",
    "trials:full": "bun scripts/run-trials.ts --mode full",
    "trials:regression": "bun scripts/run-trials.ts --type regression",
    "typecheck": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "biome format --write",
      "biome lint --write"
    ],
    "package.json": [
      "format-package -w"
    ]
  },
  "dependencies": {
    "@google/genai": "^1.38.0",
    "@plaited/agent-eval-harness": "^0.7.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.12",
    "@commitlint/cli": "20.3.1",
    "@commitlint/config-conventional": "20.3.1",
    "@commitlint/types": "20.3.1",
    "@types/bun": "latest",
    "@types/node": "25.0.10",
    "bun-types": "latest",
    "format-package": "7.0.0",
    "lint-staged": "16.2.7",
    "typescript": "5.9.3"
  }
}
