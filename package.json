{
  "type": "module",
  "scripts": {
    "build": "docker compose build",
    "calibrate": "bun scripts/calibrate.ts",
    "check": "bun run format:check && bun run lint && bun run typecheck && bun run check:package",
    "check:package": "format-package --check",
    "check:write": "bun run format && bun run lint:fix && bun run format:package",
    "clean": "rm -rf data/results/*/*.jsonl",
    "compare": "bun scripts/compare.ts",
    "compare-trials": "bun scripts/compare-trials.ts",
    "compare-trials:capability": "bun scripts/compare-trials.ts --trial-type capability",
    "compare-trials:statistical": "bun scripts/compare-trials.ts --strategy statistical",
    "compare:full": "bun scripts/compare.ts --mode full",
    "compare:full-statistical": "bun scripts/compare.ts --mode full --strategy statistical",
    "compare:test": "bun scripts/compare.ts --mode test",
    "compare:test-statistical": "bun scripts/compare.ts --mode test --strategy statistical",
    "format": "biome format --write",
    "format:check": "biome format",
    "format:package": "format-package --write",
    "generate:mcp": "bun scripts/generate-mcp-prompts.ts",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "prepare": "git config core.hooksPath .hooks",
    "run": "bun scripts/run.ts",
    "run:full": "bun run run --mode full",
    "run:test": "bun run run --mode test",
    "sample:test": " bun run generate:mcp && bun scripts/sample.ts --dir test --count 5",
    "sample:trials": "bun run generate:mcp && bun scripts/sample.ts --dir trials --count 30",
    "test": "bun test",
    "trials": "bun scripts/run-trials.ts",
    "trials:capability": "bun scripts/run-trials.ts --trial-type capability",
    "trials:regression": "bun scripts/run-trials.ts --trial-type regression",
    "typecheck": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "biome format --write",
      "biome lint --write"
    ],
    "package.json": [
      "format-package -w"
    ]
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@google/genai": "^1.38.0",
    "@plaited/agent-eval-harness": "^0.8.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@commitlint/cli": "20.3.1",
    "@commitlint/config-conventional": "20.3.1",
    "@commitlint/types": "20.3.1",
    "@types/bun": "1.3.7",
    "@types/node": "25.1.0",
    "bun-types": "1.3.7",
    "format-package": "7.0.0",
    "lint-staged": "16.2.7",
    "typescript": "5.9.3"
  }
}
