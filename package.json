{
  "type": "module",
  "scripts": {
    "build": "docker compose build",
    "calibrate": "bun scripts/calibrate.ts",
    "check": "bun run format:check && bun run lint && bun run typecheck && bun run check:package",
    "check:package": "format-package --check",
    "check:write": "bun run format && bun run lint:fix && bun run format:package",
    "clean": "rm -rf data/results/*/*/*.jsonl",
    "compare": "bun scripts/compare.ts",
    "compare:stat": "bun scripts/compare.ts --strategy statistical",
    "format": "biome format --write",
    "format:check": "biome format",
    "format:package": "format-package --write",
    "generate:mcp": "bun scripts/generate-mcp-prompts.ts",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "prepare": "git config core.hooksPath .hooks",
    "report": "bun scripts/report.ts",
    "test": "bun test",
    "trials": "bun scripts/run-trials.ts",
    "typecheck": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "biome format --write",
      "biome lint --write"
    ],
    "package.json": [
      "format-package -w"
    ]
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@biomejs/biome": "2.3.13",
    "@commitlint/cli": "20.3.1",
    "@commitlint/config-conventional": "20.3.1",
    "@commitlint/types": "20.3.1",
    "@google/genai": "^1.38.0",
    "@plaited/agent-eval-harness": "^0.13.0",
    "@plaited/development-skills": "^0.8.0",
    "@types/bun": "1.3.7",
    "@types/node": "25.1.0",
    "@youdotcom-oss/api": "0.2.2",
    "bun-types": "1.3.7",
    "format-package": "7.0.0",
    "lint-staged": "16.2.7",
    "typescript": "5.9.3",
    "zod": "^4.3.5"
  }
}
