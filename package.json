{
  "type": "module",
  "scripts": {
    "check": "bun run format:check && bun run lint && bun run typecheck",
    "check:write": "bun run format && bun run lint:fix && bun run format:package",
    "format": "biome format --write",
    "format:check": "biome format",
    "format:package": "format-package --write",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "prepare": "git config core.hooksPath .hooks",
    "generate-mcp": "bun scripts/generate-mcp-config.ts",
    "run-pairing": "bun scripts/run-pairing.ts",
    "compare": "bun scripts/compare-results.ts",
    "playoffs": "docker compose up --build",
    "clean": "rm -rf data/results/*/*.jsonl"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": [
      "biome format --write",
      "biome lint --write"
    ],
    "package.json": [
      "format-package -w"
    ]
  },
  "dependencies": {
    "@plaited/acp-harness": "^0.4.4",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "latest",
    "@types/node": "^25.0.8",
    "bun-types": "latest",
    "format-package": "^7.0.0",
    "lint-staged": "^15.2.11",
    "typescript": "^5.9.3"
  }
}
